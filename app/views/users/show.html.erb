<div class="container">
  <div class="row">
  	<div class="col-xs-3"><%= render 'users/sidebar', user: @user %> </div>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table>
		  <thead>
		    <tr>
		      <th>  </th>
		  	  <th>Title</th>
		  	  <th>Opinion</th>
		  	</tr>
		  </thead>

		  <tbody>
		  <% @user.books.each do |book| %>
		    <tr>
		      <td>
		    	<%= attachment_image_tag book.user, :profile_image, :fill, 20, 20, fallback:"no_image.jpg" %>
		      </td>
			  <td>
			    <%= book.title %>
			  </td>
			  <td>
			    <%= book.body %>
			  </td>
			</tr>
		  <% end %>
		  </tbody>
        </table>
    </div>
  </div>
</div>
