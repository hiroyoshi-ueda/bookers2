<div class="container">
  <div class="row">
  	<div class="col-xs-3"><%= render 'users/sidebar', user: @user %> </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table>
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback:"no_image.jpg", size:'50x50' %>
              </td>
              <td>
              	<%= user.name %>
              </td>
              <td>
              	<%= link_to "show", user_path(user.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>