<div class="row">
  <div class="top-messege col-md-offset-3 col-md-6">
    <h1>Editing Book</h1>
    <%= form_for(@book) do |f| %>
		<h4>Title</h4>
		<div class="filed row col-xs-12">
		<%= f.text_field :title, size: 78 %>
	    </div>
	    <h4>Opinion</h4>
	    <%= f.text_area :body, size: "77x2" %>
	    <p><%= f.submit 'Update Book',class: "btn btn-primary col-xs-12" %></p>
    <% end %>
    <%= link_to "show",book_path(@book) %><span> | </span><%= link_to "Back", books_path %>
  </div>
</div>



