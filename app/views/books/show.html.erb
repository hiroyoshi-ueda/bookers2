<div class="container">
  <div class="row">
    <div class="col-xs-3"><%= render 'users/sidebar', user: @user %></div>
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table>
      <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback:"no_image.jpg" %>
        </td>
        <td>
          <%= @book.title %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' } %>
        </td>
      </tr>
    </table>
</div>


