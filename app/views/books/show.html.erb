<div class="container">
  <div class="row">
    <div class="col-xs-3"><%= render 'users/sidebar', user: @user %></div>
    <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table table-striped">
      <tr>
        <td>
          <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback:"no_image.jpg", size:'40x40' %>
            <p><%= link_to @book.user.name, user_path(@book.user) %></p>
        </td>
        <td>
          <%= link_to book_path do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%= @book.body %>
        </td>
        <% if @book.user_id == current_user.id %>
          <td>
            <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book.id), class: "btn btn-danger", method: :delete, data: { confirm: '本当に消しますか？' } %>
          </td>
        <% end %>
      </tr>
    </table>
</div>