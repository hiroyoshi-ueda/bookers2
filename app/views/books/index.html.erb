<h2>Books</h2>

  <table>
  	<thead>
  	  <tr>
  	  	<th>Title</th>
  	  	<th>Opinion</th>
  	  </tr>
  	</thead>

  	<tbody>
	<% @books.each do |book| %>
	  <tr>
	  	<td>
	  	  <%= book.title %>
	  	</td>

	  	<td>
	  	  <%= book.body %>
	  	</td>

	  	<td>
	  	  <%= link_to "Edit", edit_book_path(book.id) %>
	  	  <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: '本当に消しますか？' } %>
	  	</td>
	  </tr>
	<% end %>
	</tbody>
</table>